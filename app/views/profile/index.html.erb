<div class=row>
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <div class="wrapper wrapper-content">
      <div class="panel panel-default devise-bs">
        <%if current_user.id == @user.id%>
          <div class="ibox-tools">
              <%= link_to "Редактировать", edit_user_path(current_user), class: "btn btn-info btn-edit"%>
            </div>
            <%end%>
        <div class="panel-heading">
          <h4><%= t('.title', :resource => @user.model_name.human , :default => "Профиль") %></h4>

        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12" style="text-align:center;" >
              <%= label_tag "Фото" %>
            </div>
            <div class="col-md-12" style="text-align:center; min-height:<%=current_user.avatar.get_image_height%>px;" >
              <%= get_avatar(@user, {class: "user-avatar"}) %>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag "Имя" %>
                <%=content_tag('div', @user.name ,class: "form-control")%>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag "Фамилия" %>
                <%=content_tag('div', @user.last_name ,class: "form-control")%>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= label_tag :"Номер телефона" %>
                <%=content_tag('div', @user.phone ,class: "form-control")%>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= label_tag :email %>
                <%=content_tag('div', @user.email ,class: "form-control")%>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= label_tag :skype %>
                <%=content_tag('div', @user.skype ,class: "form-control")%>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag "Дата рождения" %>
                <%= content_tag('div', @user.birthday ,class: "form-control")%>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                  <%= label_tag "Пол" %>
                  <%= select("user", "sex", [['Мужчина', 2],['Женщина', 1]], { include_blank: true }, class: "form-control", :selected => @user.sex, disabled:'')%>
                  <%content_tag('div', @user.sex ,class: "form-control")%>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= label_tag "Страна" %>
                  <%=country_select("user", "country", { priority_countries: ["GB", "FR"], selected: "GB" }, { class: 'form-control',  data: { attribute: "value" } , placeholder: "Страна", disabled:''})%>
                </div>
              </div>

            <div class="col-md-6">
              <div class="form-group">
                  <%= label_tag "Город" %>
                  <%= content_tag('div', @user.city ,class: "form-control")%>
                </div>
              </div>
            <div class="col-md-12">
              <div class="form-group">
                  <%= label_tag "О себе" %>
                   <%= content_tag('div', @user.about ,class: "form-control")%>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
