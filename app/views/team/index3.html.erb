<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-sm-8">
      <div class="ibox">
        <div class="ibox-content">
          <h2>Команда</h2>
          <%= form_tag team_path, :method => 'get', :id => "team_search", :remote => true do %>
              <div class="input-group">
                <%= text_field_tag 'search', nil, placeholder: "Имя Фамилия", class: "input form-control" %>
                  <span class="input-group-btn">
                    <button type="submit" class="btn btn btn-primary"> <i class="fa fa-search"></i> Поиск</button>
                  </span>
              </div> 
          <% end %>

          <div class="clients-list">
            <ul class="nav nav-tabs">
              <span class="pull-right small text-muted"></span>
              <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i>Контакты</a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <div class="full-height-scroll">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <tbody>
                      <%= render :partial => 'user_list', :locals => { :team => @team} %> 
                      </tbody>
                    </table>
                    <%= will_paginate @team unless @team.nil? %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
