<h1><%= "#{@user.name} #{@user.last_name}" %></h1>
<div class="row">
  <div class="col-md-3">
    <%= get_avatar @user, style: "max-width:100%"%>
  </div>
  <div class="col-md-3">
    <p>
        <%= @user.role.description %>
    </p>
    <p>
        <%= @user.email %>
    </p>
    <p>
        Phone: <%= @user.phone %>
    </p>
    <p>
        Skype: <%= @user.skype %>
    </p>
    <p>
        VK: <%= @user.vk %>
    </p>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-4">
    <p>
      Parnters count: <%= @descendants.count %>
    </p>
  </div>
  <div class="col-md-4">
    <p>
      First line partners: <%= @user.children.size %>
    </p>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <div class="list-group">
      <%= render partial: "user", collection: @descendants %>
    </div>
  </div>
</div>
