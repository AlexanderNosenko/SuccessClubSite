<h1>Payments</h1>
<div class="row">
  <%=form_tag '/admin/payments/transfer', method: :put do%>
  <h3>Make transfer</h3>
  <div class="col-md-4">
    <%=text_field_tag 'from_user_id'%>
  </div>
  <div class="col-md-4">
    <%=text_field_tag 'to_user_id'%>
  </div>
  <div class="col-md-4">
    <%=submit_tag%>
  </div>
  <%end%>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="list-group">
      <% @payments.each do |payment| %>
        <div class="row list-group-item">
          <div class="col-lg-2">
            <%= payment.created_at.strftime("%d/%m/%y %H:%M:%S") %>
          </div>
          <div class="col-lg-2">
            <%= payment.amount %>$
          </div>
          <div class="col-lg-2">
            from: <%= payment.from %>
          </div>
          <div class="col-lg-2">
            to: <%= payment.to %>
          </div>
          <% if payment.from_user_id %>
          <div class="col-lg-2">
            <%= link_to User.find(payment.from_user_id).name ,admin_user_path(payment.from_user_id) %>
          </div>
          <% end %>
          <% if payment.to_user_id %>
          <div class="col-lg-2">
            <%= link_to User.find(payment.to_user_id).name ,admin_user_path(payment.to_user_id) %>
          </div>
          <% end %>
          <% if payment.method %>
          <div class="col-lg-2">
            <%= payment.method %>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= will_paginate @payments %>
  </div>
</div>
