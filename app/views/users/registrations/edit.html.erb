<div class=row>
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <div class="wrapper wrapper-content">
      <div class="panel panel-default devise-bs">
        <div class="panel-heading">
          <h4><%= t('.title', :resource => resource_class.model_name.human , :default => "Редактировать профиль") %></h4>
        </div>
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
              <div class="form-group">
                <%= f.label "Имя" %>
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Имя" %>
              </div>
              <div class="form-group">
                <%= f.label "Фамилия" %>
                <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Фамилия" %>
              </div>
              <!--
              <div class="form-group">
                <%= f.label :"Номер телефона" %>
                <%= f.text_field :phone, autofocus: true, class: "form-control", placeholder: "Телефон" %>
              </div>
              <div class="form-group">
                <%= f.label :skype %>
                <%= f.text_field :skype, autofocus: true, class: "form-control", placeholder: "Skype" %>
              </div>
              <div class="form-group">
                <%= f.label "Дата рождения" %>
                <%= f.text_field :birthday, autofocus: true, class: "form-control", placeholder: "Дата рождения" %>
              </div>
              <div class="form-group">
                <%= f.label "Пол" %>
                <%= f.text_field :sex, autofocus: true, class: "form-control", placeholder: "Пол" %>
              </div>
              <div class="form-group">
                <%= f.label "Страна" %>
                <%= f.text_field :country, autofocus: true, class: "form-control", placeholder: "Страна" %>
              </div>
              <div class="form-group">
                <%= f.label "Город" %>
                <%= f.text_field :city, autofocus: true, class: "form-control", placeholder: "Город" %>
              </div>
              <div class="form-group">
                <%= f.label "О себе" %>
                <%= f.text_field :about, autofocus: true, class: "form-control", placeholder: "О себе" %>
              </div>
              -->
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Новый пароль" %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', :default => "оставьте пустым, если вы не хотите, изменить его") %>)</i>
                <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Подтвердить пароль" %>
                <%= f.password_field :password_confirmation, class: "form-control"  %>
              </div>
              <div class="form-group">
                <%= f.label "Текущий пароль" %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', :default => 'введите пароль для применения изменений') %>)</i>
                <%= f.password_field :current_password, class: "form-control" %>
              </div>
              <%= f.submit t('.update', :default => "Обновить"), class: "btn btn-primary" %>
              <%= link_to t('.back', :default => 'Назад'), :back, class: "btn btn-info" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-2"></div>
</div>
