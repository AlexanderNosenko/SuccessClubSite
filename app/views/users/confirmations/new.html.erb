<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">КП</h1>
    </div>
    <h2>Сообщение о подтверждении почты</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <% if devise_has_errors? %>
       <div class="alert alert-warning"><%= devise_error_messages! %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="form-group">
        <%= f.submit "Отправить", class: "btn btn-primary form-control" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
